<Window 
    x:Class="WpfApp.EmployeeInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Medarbejder Info" 
    Height="700" 
    Width="700"
    Background="#AED6F1">
    <Grid>
     
        <StackPanel 
            Margin="10,10,10,10">
            <TextBlock 
                Text="Medarbejder Information" 
                FontSize="35" 
                HorizontalAlignment="Center" 
                Margin="0,40" 
                FontWeight="Light"/>
            <DataGrid 
                Name="EmployeeDataGrid" 
                AutoGenerateColumns="True" 
                Height="229" 
                Width="566" 
                Margin="0,70" />
            
            <Button 
                Content="Tilbage til hovedmenu"
                FontSize="15"
                FontStyle="Italic"
                Click="BackToMainMenu" Width="250" 
                Height="45" HorizontalAlignment="Center" 
                Margin="0,-5" 
                />
            
        </StackPanel>
    </Grid>
</Window>