<Window x:Class="WpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Login" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20" />
        <TextBox Name="UsernameBox" Width="200" Margin="0,5" />
        <PasswordBox Name="PasswordBox" Width="200" Margin="0,5" />
        <Button Content="Log ind" Click="LoginButton_Click" Width="200" Height="40" Margin="0,10" />
        <TextBlock Name="ErrorText" Foreground="Red" Visibility="Collapsed" />
    </StackPanel>
</Window>